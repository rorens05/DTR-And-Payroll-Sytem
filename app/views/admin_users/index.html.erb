<p id="notice"><%= notice %></p>

<h1>Admin Users</h1>
<hr>
<table class="model-information">
  <thead>
    <tr>
      <th>Email</th>
      <th>Password digest</th>
      <th>Name</th>
      <th>Contact no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_users.each do |admin_user| %>
      <tr>
        <td><%= admin_user.email %></td>
        <td><%= admin_user.password_digest %></td>
        <td><%= admin_user.name %></td>
        <td><%= admin_user.contact_no %></td>
        <td><%= link_to 'Show', admin_user %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(admin_user) %></td>
        <td><%= link_to 'Destroy', admin_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin User', new_admin_user_path %>
