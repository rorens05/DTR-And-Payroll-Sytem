<p id="notice"><%= notice %></p>

<h1>Employees</h1><hr>
<table class="model-information">
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Contact no</th>
      <th>Position</th>
      <th>Salary type</th>
      <th>Department</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.contact_no %></td>
        <td><%= employee.position %></td>
        <td><%= link_to employee.salary_type.name, salary_type_path(employee.salary_type) %></td>
        <td><%= link_to employee.department.name, department_path(employee.department) %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

