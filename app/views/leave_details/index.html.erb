<p id="notice"><%= notice %></p>

<h1>Leave Details</h1>
<hr>
<table class="model-information">
  <thead>
    <tr>
      <th>Name</th>
      <th>Is payed</th>
      <th>Number of days</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_details.each do |leave_detail| %>
      <tr>
        <td><%= leave_detail.name %></td>
        <td><%= leave_detail.is_payed %></td>
        <td><%= leave_detail.number_of_days %></td>
        <td><%= link_to 'Show', leave_detail %></td>
        <td><%= link_to 'Edit', edit_leave_detail_path(leave_detail) %></td>
        <td><%= link_to 'Destroy', leave_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

