<p id="notice"><%= notice %></p>

<h1>Attendances</h1>
<hr>
<table class="model-information">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Time in</th>
      <th>Time out</th>
      <th>Date</th>
      <th>Day type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= link_to attendance.employee.name, employee_path(attendance.employee) %></td>
        <td><%= attendance.time_in.strftime("%I:%M %p") %></td>
        <td><%= attendance.time_out.strftime("%I:%M %p") %></td>
        <td><%= attendance.time_in.strftime("%B %d, %Y") %></td>
        <td><%= attendance.day_type %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendance', new_attendance_path %>
