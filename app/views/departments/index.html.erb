<p id="notice"><%= notice %></p>

<h1>Departments</h1>
<hr>
<div class="jumbotron">
<table class="model-information">
  <thead>
    <tr>
      <th>Name</th>
      <th>Manager</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= link_to department.employee.name, employee_path(department.employee) %></td>
        <td><%= department.start_time.strftime("%I:%M %p") %></td>
        <td><%= department.end_time.strftime("%I:%M %p") %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_department_path, class: "btn btn-primary margin-normal"  %>
